<Application x:Class="SchadLucas.EatSmart.App"
             x:Name="RootApplication"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:eatSmart="clr-namespace:SchadLucas.EatSmart">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <eatSmart:Bootstrapper x:Key="Bootstrapper" />
                </ResourceDictionary>

                <!--Basics-->
                <ResourceDictionary Source="UI/Resources/UiLayers.xaml" />
                <ResourceDictionary Source="UI/Resources/Colors.xaml" />
                <ResourceDictionary Source="UI/Resources/Enums.xaml" />
                <ResourceDictionary Source="UI/Resources/Converters.xaml" />

                <!--Themes-->
                <ResourceDictionary Source="UI/Resources/Themes/Light.xaml" />

                <!--Styles-->
                <ResourceDictionary Source="UI/Resources/Styles/Loading.xaml" />
                <ResourceDictionary Source="UI/Resources/Styles/TriggerableButtonBase.xaml" />
                <ResourceDictionary Source="UI/Resources/Styles/PopupNotification.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
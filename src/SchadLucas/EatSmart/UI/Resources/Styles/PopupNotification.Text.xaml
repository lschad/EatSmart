<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PopupNotification.Text.Style" TargetType="{x:Type TextBlock}" BasedOn="{x:Null}">
        <Style.Resources>
            <SolidColorBrush x:Key="this.Foreground" Color="{StaticResource Theme.Foreground}" />
        </Style.Resources>
        <Setter Property="Foreground" Value="{StaticResource this.Foreground}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>